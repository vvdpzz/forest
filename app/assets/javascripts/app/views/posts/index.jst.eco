<h1 class="text_centre mb_0"><a>Listing Posts</a></h1>

<% for post in @posts: %>
  <div class="item" data-id="<%= post.id %>">
    <a data-type="show"><%= post.title %></a>
    
    <a data-type="edit">Edit</a> 
    <a data-type="destroy">Destroy</a>
  </div>
<% end %>

<p><a data-type="new">New Post</a></p>